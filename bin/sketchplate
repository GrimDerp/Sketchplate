#!/usr/bin/env node

var program = require('commander'),
	sketchplate = require('../lib/sketchplate');

program
	.version('0.0.2')
	.option('-u, --update', 'Update libraries')
	.option('-c, --create [location]', 'Add to [location]','')
	.parse(process.argv);


if( !sketchplate.hasLibraries() || program.update ){
		sketchplate.fetchLibs();
}

console.log( 'program.create: '+ program.create );
if( program.create !== undefined  && program.create !== ''){
	sketchplate.create( program.create );
}

